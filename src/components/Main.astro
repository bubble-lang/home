---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<main class={`bg-white ${className}`}>
  <div class="container mx-auto px-0 sm:px-3 py-8">
    <slot />
  </div>
</main>

<style>
  main {
    min-height: calc(100vh - 64px); /* Adjust this value based on your header height */
  }
</style>
